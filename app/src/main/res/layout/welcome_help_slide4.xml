<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen4">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView1"
        android:background="@drawable/bomb_normal"
        android:layout_above="@+id/textview"
        android:layout_toLeftOf="@+id/ortext"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/ortext"
        android:text="/"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_above="@+id/textview"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:id="@+id/imageView2"
        android:background="@drawable/flag"
        android:layout_above="@+id/textview"
        android:layout_toRightOf="@+id/ortext"
        android:layout_marginLeft="10dp"

        />


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The game can be played in two modes, Flagmode or mine mode. Flagmode can be used to flag the cells and mine mode can be used for click open the cells"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />




</RelativeLayout>