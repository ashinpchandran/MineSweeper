<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="High Scores"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/button_highscores"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="OnClick"
        android:background="@drawable/buttonshape"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="Options"
        android:id="@+id/button_options"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="OnClick"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/button_highscores"
        android:layout_alignLeft="@+id/button_highscores"
        android:layout_alignStart="@+id/button_highscores"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="New Game"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/button_newgame"
        android:layout_above="@+id/button_highscores"
        android:layout_alignLeft="@+id/button_highscores"
        android:layout_alignStart="@+id/button_highscores"
        android:layout_alignRight="@+id/button_highscores"
        android:layout_alignEnd="@+id/button_highscores"
        android:onClick="OnClick"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="Help"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/button_help"
        android:layout_below="@+id/button_options"
        android:layout_alignLeft="@+id/button_options"
        android:layout_alignStart="@+id/button_options"
        android:layout_alignRight="@+id/button_options"
        android:layout_alignEnd="@+id/button_options"
        android:onClick="OnClick"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
       />



</RelativeLayout>